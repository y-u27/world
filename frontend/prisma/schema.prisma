generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id          Int      @id @default(autoincrement())
  title       String
  content     String
  createdAt   DateTime @default(now())
  countryName String?
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  likes       Likes[]
}

model User {
  id       Int     @id @default(autoincrement())
  name     String?
  image    String
  email    String  @unique
  password String
  Post     Post[]
  comment  String?
  likes    Likes[]
}

model Likes {
id Int @id @default(autoincrement())
userId Int
postId Int
user User @relation(fields: [userId], references: [id])
post Post @relation(fields: [postId], references: [id])

@@unique([userId, postId])
}