generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id          Int      @id @default(autoincrement())
  title       String
  content     String
  createdAt   DateTime @default(now())
  countryName String?
  userId      Int
  image       String?
  likes       Likes[]
  user        User     @relation(fields: [userId], references: [id])
}

model User {
  id       Int     @id @default(autoincrement())
  name     String?
  image    String
  email    String  @unique
  password String
  comment  String?
  likes    Likes[]
  Post     Post[]
}

model Likes {
  id     Int  @id @default(autoincrement())
  userId Int
  postId Int
  post   Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  user   User @relation(fields: [userId], references: [id])

  @@unique([userId, postId])
}

model News {
  id Int @id @default(autoincrement())
  content String
  createdAt DateTime @default(now())
}